    <!-- SweetAlert logic for showing blocked user alert -->
    <script>
        // Parse URL parameters
        const urlParams = new URLSearchParams(window.location.search);
        const errorType = urlParams.get('error');

        // Show corresponding SweetAlert for blocked user or other errors
        if (errorType === 'blocked') {
            Swal.fire({
                icon: 'error',
                title: 'Your account is blocked!',
                text: 'Please contact support for more information.',
            });
        } else if (errorType === 'userNotFound') {
            Swal.fire({
                icon: 'error',
                title: 'User not found!',
                text: 'Please check your email and try again.',
            });
        } 
        // else if (errorType === 'invalidPassword') {
        //     Swal.fire({
        //         icon: 'error',
        //         title: 'Incorrect password!',
        //         text: 'Please try again.',
        //     });
        // } 
        else if (errorType === 'serverError') {
            Swal.fire({
                icon: 'error',
                title: 'Server error!',
                text: 'Please try again later.',
            });
        }
    </script>




