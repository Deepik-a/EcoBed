            <h2 class="text-center mb-4">Add Category</h2>

            <!-- Add Category Form -->
            <form id="categoryForm" method="post">
                <div class="mb-3">
                    <input type="text" name="name" class="form-control" placeholder="Enter category name" required>
                </div>
